<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPertemuanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Pertemuan"
                android:textColor="@color/putih"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertemuan telah di buat."/>

            <TextView
                android:id="@+id/apoteker_name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Apoteker"/>

            <TextView
                android:id="@+id/konseli_name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Konseli"/>

            <TextView
                android:id="@+id/alamat"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"/>

            <TextView
                android:id="@+id/map"
                android:textSize="14sp"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi: Lihat di Map"/>


            <TextView
                android:id="@+id/detail"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"/>

            <TextView
                android:id="@+id/status"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apabila anda menyetujui pertemuan diatas harap klik tombol di bawah ini."/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/h3"
                android:text="SAYA SETUJU"
                android:textAllCaps="true"
                android:textColor="@color/putih"
                android:background="@drawable/all_button"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>